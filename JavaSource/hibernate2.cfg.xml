<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/worldcup2014</property>
        <property name="hibernate.connection.username">root</property>
        
           
        <property name="current_session_context_class">thread</property>
        
        <mapping resource="com/fifa/ubosque/worldcup/entities/Arbitros.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Descripcion.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Equipos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Estadios.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/EstadosPartidos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Fases.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Grupos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Jugadores.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Pais.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Partidos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Perfiles.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/RankingEquipos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/RankingJugadores.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Tecnicos.hbm.xml"/>
        <mapping resource="com/fifa/ubosque/worldcup/entities/Usuarios.hbm.xml"/>
    </session-factory>    
</hibernate-configuration>
